<launch>

  <!-- Ambiente para pruebas no oficial recuperado de https://www.leorover.tech/integrations/erc-gazebo
  Nota: Utilizar solo para pruebas. -->

  <arg name="fixed" default="false"/>
  <arg name="robot_ns" default="/"/>
  <arg name="model_name" default="leo"/>
  
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find leo_erc_gazebo_worlds)/worlds/marsyard2022.world"/>
    <arg name="paused" default="false"/>
    <arg name="gui" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
  </include>

  <node name="ground_truth_filter"
    pkg="leo_erc_gazebo"
    type="ground_truth_filter">
    <param name="x_offset" value="-17.003807" />
    <param name="y_offset" value="7.617856" />
    <param name="z_offset" value="1.352268" />
  </node>

</launch>